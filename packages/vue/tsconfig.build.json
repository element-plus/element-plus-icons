{
  "compilerOptions": {
    "composite": true,
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021"],
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["build", "package.json"]
}
